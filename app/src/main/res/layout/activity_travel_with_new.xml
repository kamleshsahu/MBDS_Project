<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="start"
            type="com.mapboxweather.kamleshsahu.mapboxdemo.models.MLocation" />

        <variable
            name="dstn"
            type="com.mapboxweather.kamleshsahu.mapboxdemo.models.MLocation" />

        <variable
            name="mtime"
            type="com.mapboxweather.kamleshsahu.mapboxdemo.models.MTime" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mapboxweather.kamleshsahu.mapboxdemo.Activity.MainActivity">


        <LinearLayout
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/srcdstcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:cardBackgroundColor="@color/loo_pre"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/fillform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/swap"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/ic_swap_vertical_circle_black_24dp"
                                android:onClick="swap_onClick" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/source_field"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:onClick="start_onclick"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:padding="5dp"
                                            android:id="@+id/start_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/rect"
                                            android:fontFamily="sans-serif-thin"
                                            android:hint="Choose starting point"
                                            android:singleLine="true"
                                            android:text="@{start.name}"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <LinearLayout
                                            android:padding="5dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                              android:layout_marginLeft="0dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginRight="5dp"
                                                android:fontFamily="sans-serif-thin"
                                                android:text="Current Location"
                                                android:textSize="15sp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <Switch
                                                android:id="@+id/current_location"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:textColor="#9D9D9D" />
                                        </LinearLayout>

                                    </LinearLayout>


                                    <ImageView
                                        android:id="@+id/select_from_map"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:onClick="onClickCurrentLocation1"
                                        android:padding="0dp"
                                        android:src="@drawable/ic_pin_drop_black_24dp"
                                        android:visibility="visible" />

                                </RelativeLayout>


                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/dottedline" />

                                <RelativeLayout
                                    android:padding="5dp"
                                    android:id="@+id/dstn_field"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:onClick="destination_onclick"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/dstn_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/rect"
                                        android:fontFamily="sans-serif-thin"
                                        android:hint="Choose destinationâ€¦"
                                        android:singleLine="true"
                                        android:text="@{dstn.name}"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:layout_marginRight="-5dp"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:onClick="onClickCurrentLocation2"
                                        android:src="@drawable/ic_pin_drop_black_24dp"
                                        android:visibility="visible" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:fontFamily="sans-serif-thin"
                                android:text="Depart At  : "
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <android.support.v7.widget.CardView

                                android:id="@+id/card_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:layout_marginRight="10dp"
                                android:onClick="setTime"
                                app:cardBackgroundColor="@color/colorPrimary"

                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="3dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/disp_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="sans-serif-condensed"
                                        android:text="@{mtime.disp_time}"
                                        android:textColor="@color/loo_pre"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </android.support.v7.widget.CardView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="3"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="3dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/car"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:padding="3dp"
                                        android:saveEnabled="true" />
                                    <!--<ImageView-->
                                    <!--android:layout_weight="1"-->
                                    <!--android:id="@+id/b"-->
                                    <!--android:padding="3dp"-->
                                    <!--android:layout_width="40dp"-->
                                    <!--android:layout_height="40dp" />-->
                                    <ImageView
                                        android:id="@+id/bike"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:padding="3dp"
                                        android:saveEnabled="true" />

                                    <ImageView
                                        android:id="@+id/walk"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:padding="3dp"
                                        android:saveEnabled="true" />
                                    <!--<ImageView-->
                                    <!--android:layout_weight="1"-->
                                    <!--android:id="@+id/e"-->
                                    <!--android:padding="3dp"-->
                                    <!--android:layout_width="40dp"-->
                                    <!--android:layout_height="40dp" />-->
                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/option"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:onClick="onOptionClick"
                                    android:text="options"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <!--<Switch-->

                                <!--android:textSize="13sp"-->
                                <!--android:layout_gravity="center_vertical"-->
                                <!--android:textColor="#9e9e9e"-->
                                <!--android:id="@+id/weather_switch"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="" />-->
                                <!--<ImageView-->
                                <!--android:id="@+id/weather_switch_icon"-->
                                <!--android:layout_width="40dp"-->
                                <!--android:layout_height="40dp" />-->
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:layout_weight="1"
                            android:gravity="right">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/option_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:saveEnabled="true"
                                        android:text="Avoid"
                                        android:textAllCaps="true"
                                        android:textSize="13sp" />

                                    <CheckBox
                                        android:id="@+id/highway"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:saveEnabled="true"
                                        android:text="Highways" />

                                    <CheckBox
                                        android:id="@+id/tolls"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:saveEnabled="true"
                                        android:text="Tolls" />

                                    <CheckBox
                                        android:id="@+id/ferries"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:saveEnabled="true"
                                        android:text="Ferries" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Distance units"
                                        android:textAllCaps="true"
                                        android:textSize="13sp" />

                                    <RadioGroup
                                        android:id="@+id/distance_unit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RadioButton
                                            android:id="@+id/automatic"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:tag="0"
                                            android:text="automatic" />

                                        <RadioButton
                                            android:id="@+id/miles"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:tag="1"
                                            android:text="miles" />

                                        <RadioButton
                                            android:id="@+id/km"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:tag="2"
                                            android:text="km" />
                                    </RadioGroup>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:onClick="findRoute_onClick"
                            android:text="Find Routes"
                            android:textColor="#ffffff" />
                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</layout>