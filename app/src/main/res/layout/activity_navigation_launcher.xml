<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">



    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mapbox_uiAttribution="false">






                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/launch_route_btn"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="16dp"
                    android:enabled="false"
                    android:onClick="onRouteLaunchClick"
                    android:src="@drawable/ic_navigation_black_24dp"
                    sothree:backgroundTint="@color/colorAccent"
                    sothree:borderWidth="0dp" />

                <android.support.design.widget.FloatingActionButton
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|bottom"
                    android:backgroundTint="#ffffff"
                    android:onClick="showWeather"
                    android:src="@drawable/ic_weather"
                    sothree:backgroundTint="#ffffff"
                    sothree:borderWidth="0dp" />


            </com.mapbox.mapboxsdk.maps.MapView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/route_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:onClick="allRouteOnClick"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Routes List"
                            android:textColor="@color/white" />
                        <ImageView
                            android:id="@+id/route_arrow"
                            android:src="@drawable/down_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>



                </android.support.v7.widget.CardView>
                <RelativeLayout
                    android:id="@+id/rvParent"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/route_card"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <ProgressBar
                android:layout_centerInParent="true"
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/dragup_panel">

            </include>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
